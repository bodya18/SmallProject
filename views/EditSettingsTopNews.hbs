<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <form method="POST" action="/news/editSettings">
                {{#if error}}
                    <font color='red'>{{error}}</font>
                {{/if}}
                <h1>{{settings.label}}</h1>
                <input type="hidden" value="{{settings.label}}" name="label">
                <input type="hidden" value="{{settings.id}}" name="id">
                <input type="hidden" value="{{settings._key}}" name="key">
                
                <div class="cat-news">
                    {{#each categories}}
                        <div class="col-md-12">
                            <div align="center">
                                <br><br><br><br>
                                <h2>{{this.category}}</h2>
                            </div>
                            <div class="row">
                                {{#each @root.news}}
                                    {{#ifeq this.categoryId ../this.id}}
                                        <div class="col-md-3">
                                            <div class="cn-img">
                                                <img width="285" height="180" src="/{{this.postUrl}}" />
                                                <div class="cn-title">
                                                    <a href="/news/get/{{this.id}}">{{this.title}}</a>
                                                </div>
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" value="{{this.id}}" name="checkNews">
                                                </div>
                                            </div>
                                        </div>
                                    {{/ifeq}}
                                {{/each}}
                            </div>
                        </div>
                    {{/each}}
                

                <br><br><br><br>
                <input type="submit" class="btn btn-secondary" value="Отправить">
            </form>
        </div>
    </div>
</div>