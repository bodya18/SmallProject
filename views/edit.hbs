<div align='center'>
    <h1>Редактирование пользователя</h1>
    {{#if error}}
        <p><font color='red'>{{error}}</font></p>
    {{/if}}
    <form action="/edit" method="POST" enctype="multipart/form-data">

        <input type="hidden" name="email" value="{{users.email}}">
        <input type="hidden" name="id" value="{{users.id}}">
        <input type="hidden" name="time" value="{{users.time}}">
        <div class="col-sm-3">
            <label for="name">Имя</label><br>
            <input name="name" value="{{users.name}}" class="form-control" placeholder="name"><br><br>

            <label>Возраст</label><br>
            <input name="age" type="number" min="1" max="110" value="{{users.age}}" class="form-control" placeholder="age"><br><br><br>
            <div class="input-group mb-3">
                <input type="file" name="avatarURL" class="form-control" id="inputGroupFile02">
                <label class="input-group-text" for="inputGroupFile02">Аватар пользователя</label>
            </div>
        </div>
        
        <input type="submit" value="Отправить">
    </form>
</div>