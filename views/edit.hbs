<br><br><br><br>
<form action="/edit" method="POST" enctype="multipart/form-data">
    <input type="hidden" name="email" value="{{users.email}}">
    <input type="hidden" name="id" value="{{users.id}}">
    <input type="hidden" name="time" value="{{users.time}}">
    <div class="container">
		<div class="main-body">
			<div class="row">
				<div class="col-lg-5">
					<div class="card">
						<div class="card-body">
							<div class="d-flex flex-column align-items-center text-center">
                                {{#if users.avatarURL}}
                                    <img class="rounded-circle" src="/{{users.avatarURL}}" width="150" alt="Admin">
                                {{else}}
                                    <img src="/images/no_avatar.png" alt="Admin" class="rounded-circle" width="150">
                                {{/if}}
                                
                                <div class="mt-3">
                                    <h4>{{users.name}}</h4>
                                </div>
                                <div class="input-group mb-3">
                                    <input type="file" name="avatarURL" class="form-control" id="inputGroupFile02">
                                    <label class="input-group-text" for="inputGroupFile02">Новая аватарка</label>
                                </div>
                            </div>
							<hr class="my-4">
							<div id="block">
								<div class="block_addition" id="input1">
									<select name="netw" class="form-select" style="width: 200px; max-height: 30px; padding-top: 1px;">
										<option disabled selected></option>
										<option {{netw.vk}}>Vk</option>
										<option {{netw.telegram}}>Telegram</option>
										<option {{netw.GitHub}}>Github</option>
										<option {{netw.twitter}}>Twitter</option>
										<option {{netw.instagram}}>Instagram</option>
										<option {{netw.facebook}}>Facebook</option>
									</select>
									<input class="form-control" placeholder="Ссылка" style="width:200px; height: 30px; margin-left: 30px" name="link">
									
									<button class="btn btn-dark" type="button" style="max-height: 30px; margin-left: 40px" onclick="addInput()">+</button>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="col-lg-7">
					<div class="card">
						<div class="card-body">
                            {{#if error}}
                                <p><font color='red'>{{error}}</font></p>
                            {{/if}}
							<div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Имя</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input name="name" type="text" class="form-control" value="{{users.name}}">
								</div>
							</div>
                            <div class="row mb-3">
								<div class="col-sm-3">
									<h6 class="mb-0">Возраст</h6>
								</div>
								<div class="col-sm-9 text-secondary">
									<input name="age" type="number" min="1" max="110" class="form-control" value="{{users.age}}">
								</div>
							</div>
							<div class="row">
								<div class="col-sm-3"></div>
								<div class="col-sm-9 text-secondary">
									<input type="submit" class="btn btn-primary px-4" value="Save Changes">
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>