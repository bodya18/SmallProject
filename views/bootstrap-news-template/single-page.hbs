
<!-- Single News Start-->
<div class="single-news">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="sn-container">
                    <div class="single-img">
                        <img class="single-img"  src="/{{news.postUrl}}">
                    </div>
                    <div class="sn-content">
                        <h1 class="sn-title">
                            {{news.title}}
                            {{#each permissionsList}}
                                {{#ifeq this 'GIVE'}}
                                    <a href="/news/edit/{{@root.news.id}}">
                                        <button type="button" class="btn btn-dark">&#9998;</button>
                                    </a>
                                {{/ifeq}}
                            {{/each}}
                            
                        </h1>
                        <pre>{{news.post_text}}</pre>
                        <br>
                    </div>
                </div>
            </div>

            
            <div class="col-lg-4">
                <div class="sidebar">
                    <div class="sidebar-widget">
                        <h2 class="sw-title">В этой категории</h2>
                        <div class="news-list">
                            {{#each dataNews}}
                                {{#ifeq this.categoryId @root.categories}}
                                    <div class="nl-item">
                                        <div class="nl-img">
                                            <img width="100" height="64" style="object-fit: cover;" src="/{{this.postUrl}}" />
                                        </div>
                                        <div class="nl-title">
                                            <a href="/news/get/{{this.id}}">{{this.title}}</a>
                                        </div>
                                    </div>
                                {{/ifeq}}
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Single News End-->        