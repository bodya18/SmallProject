<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <form method="POST" action="/news/editSettings">
                {{#if error}}
                    <font color='red'>{{error}}</font>
                {{/if}}
                <h1>{{settings.label}}</h1>
                <input type="hidden" name="label" value="{{settings.label}}">
                <input type="hidden" value="{{settings.id}}" name="id">
                <input type="hidden" value="{{settings._key}}" name="key">
                <select class="selectpicker" multiple name="selectCategoryId">
                    {{#each categories}}
                        <option value="{{this.id}}">{{this.category}}</option>
                    {{/each}}
                </select>

                <br><br><br><br>
                <input type="submit" class="btn btn-secondary" value="Отправить">
            </form>
        </div>
    </div>
</div>