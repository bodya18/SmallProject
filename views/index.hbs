<table class="table table-striped">
    <tr>
        <th width="70"></th>
        <div class="btn-group" role="group" aria-label="Basic outlined example">
            <th width="200">Имя</th>
        </div>
        <th class="table-list-users" width="250">Email</th>
        <th class="table-list-users">Роль</th>
    </tr>
    {{#each users}}
        <tr> 
            <div class="image">
                {{#if this.avatarURL}}
                    <td><a href="/user/{{this.id}}"><img src="/{{this.avatarURL}}" class="img-circle elevation-2" width="60" ></a></td>
                {{else}}
                    <td><a href="/user/{{this.id}}"><img src="/images/no_avatar.png" class="img-circle elevation-2" width="60"></a></td>
                {{/if}}
            </div>
            <td><h5>{{this.name}}</h5></td>
            <td class="table-list-users"><h5>{{this.email}}</h5></td>
            <td class="table-list-users">
                {{#each @root.rules_users}}
                    {{#ifeq this.id ../this.id}}
                        <h5 class="float-left">{{this.rule}}&nbsp;&nbsp;&nbsp;</h5>
                    {{/ifeq}}
                {{/each}}
            </td>
        </tr>
    {{/each}}
</table>