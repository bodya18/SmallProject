<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Название</th>
                        <th scope="col" class="show-settings-table">Ключ</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each settings}}
                        <tr>
                            <th>{{this.id}}</th>
                            <td>{{this.label}}</td>
                            <td class="show-settings-table">{{this._key}}</td>
                            <td class="show-settings-table">
                                <a href="/news/GetEditSettings/{{this._key}}">
                                    <button class="btn btn-secondary">Редактировать</button>
                                </a>
                            </td>
                            <td class="mobile-show-settings-table">
                                <a href="/news/GetEditSettings/{{this._key}}">
                                    <button class="btn btn-secondary">&#9998;</button>
                                </a>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>