<div class="cat-news">
    <div class="container">
        <div class="row">
            {{#each categories}}
                <div class="col-md-12">
                    <div align="center"><h2>{{this.category}}</h2></div>
                    <div class="row">{{!-- <div class="row cn-slider"> --}}
                        {{#each @root.news}}
                            {{#ifeq this.categoryId ../this.id}}
                                {{#if_eq this.time @root.nowDate}}
                                    <div class="col-md-3">
                                        <div class="cn-img">
                                            <img class="show-Posts" src="/{{this.postUrl}}" />
                                            <div class="cn-title">
                                                <a style="text-decoration: none;" href="/news/get/{{this.id}}">{{this.title}}</a>
                                            </div>
                                        </div>
                                    </div>
                                {{/if_eq}}
                            {{/ifeq}}
                        {{/each}}
                    </div><br><br>
                </div>
            {{/each}}
        </div>
    </div>
</div>