<div class="cat-news">
    <div class="container">
        <div class="row">
            {{#each categories}}
                <div class="col-md-12">
                    <div align="center"><h2>{{this.category}}</h2></div>
                    <div class="row">{{!-- <div class="row cn-slider"> --}}
                        {{#each @root.news}}
                            {{#ifeq this.categoryId ../this.id}}
                                <div class="col-md-3">
                                    <div class="cn-img">
                                        <img width="285" height="180" src="/{{this.postUrl}}" />
                                        <div class="cn-title">
                                            <a href="/news/get/{{this.id}}">{{this.title}}</a>
                                        </div>
                                    </div>
                                </div>
                            {{/ifeq}}
                        {{/each}}
                    </div><br><br>
                </div>
            {{/each}}
        </div>
    </div>
</div>