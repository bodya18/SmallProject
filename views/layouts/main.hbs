<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>{{title}}</title>
        <meta content="width=device-width, initial-scale=1.0" name="viewport">
        <meta content="Bootstrap News Template - Free HTML Templates" name="keywords">
        <meta content="Bootstrap News Template - Free HTML Templates" name="description">



        {{#if isAdmin}}
            <!-- Google Font: Source Sans Pro -->
            <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
            <!-- Font Awesome -->
            <link rel="stylesheet" href="/views/AdminLTE-3.1.0/plugins/fontawesome-free/css/all.min.css">
            <!-- Ionicons -->
            <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
            <!-- Tempusdominus Bootstrap 4 -->
            <link rel="stylesheet" href="/views/AdminLTE-3.1.0/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css">
            <!-- iCheck -->
            <link rel="stylesheet" href="/views/AdminLTE-3.1.0/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
            <!-- JQVMap -->
            <link rel="stylesheet" href="/views/AdminLTE-3.1.0/plugins/jqvmap/jqvmap.min.css">
            <!-- Theme style -->
            <link rel="stylesheet" href="/views/AdminLTE-3.1.0/dist/css/adminlte.min.css">
            <!-- overlayScrollbars -->
            <link rel="stylesheet" href="/views/AdminLTE-3.1.0/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
            <!-- Daterange picker -->
            <link rel="stylesheet" href="/views/AdminLTE-3.1.0/plugins/daterangepicker/daterangepicker.css">
            <!-- summernote -->
            <link rel="stylesheet" href="/views/AdminLTE-3.1.0/plugins/summernote/summernote-bs4.min.css">
        {{/if}}


        <!-- Favicon -->
        <link href="/views/bootstrap-news-template/img/favicon.ico" rel="icon">

        <!-- Google Fonts -->
        <link href="https://fonts.googleapis.com/css?family=Montserrat:400,600&display=swap" rel="stylesheet"> 

        <!-- CSS Libraries -->
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
        <link href="/views/bootstrap-news-template/lib/slick/slick.css" rel="stylesheet">
        <link href="/views/bootstrap-news-template/lib/slick/slick-theme.css" rel="stylesheet">

        <link rel="stylesheet" href="../../public/style.css">

        <!-- Template Stylesheet -->
        <link href="/views/bootstrap-news-template/css/style.css" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    </head>
    <body style="background-color: rgb(228, 228, 228);">

        <!-- Nav Bar Start -->
        <div class="nav-bar">
            <div class="container">
                <nav class="navbar navbar-expand-md bg-dark navbar-dark">
                    <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                        <div class="navbar-nav mr-auto">
                            {{#if isAuth}}
                                {{#if @root.isNews}}
                                    <a href="/news" class="nav-item nav-link active">News</a>
                                {{else}}
                                    <a href="/news" class="nav-item nav-link">News</a>
                                {{/if}}
                                {{#if @root.isCreate}}
                                    <a href="/news/create" class="nav-item nav-link active">New post</a>
                                {{else}}
                                    <a href="/news/create" class="nav-item nav-link">New post</a>
                                {{/if}}
                                {{#each permissionsList}}
                                    {{#ifeq this 'GIVE'}}
                                        {{#if @root.isAdmin}}
                                            <a href="/admin" class="nav-item nav-link active">Админ панель</a>
                                            {{else}}
                                            <a href="/admin" class="nav-item nav-link">Админ панель</a>
                                        {{/if}}
                                    {{/ifeq}}
                                {{/each}}
                            {{else}}
                                {{#if @root.isRegister}}
                                    <a href="/register" class="nav-item nav-link active">Регистрация</a>
                                    {{else}}
                                    <a href="/register" class="nav-item nav-link">Регистрация</a>
                                {{/if}}
                                {{#if @root.isLogin}}
                                    <a href="/login" class="nav-item nav-link active">Войти</a>
                                    {{else}}
                                    <a href="/login" class="nav-item nav-link">Войти</a>
                                {{/if}}
                            {{/if}}
                        </div>
                        <div class="navbar-nav">
                            {{#if isAuth}}
                                <a href="/logout"class="nav-item nav-link">Выйти</a>        
                            {{/if}}
                        </div>
                    </div>
                </nav>
            </div>
        </div>
        <!-- Nav Bar End -->            
        {{{body}}}
        <!-- Back to Top -->
        <a href="#" class="back-to-top"><i class="fa fa-chevron-up"></i></a>



        <!-- JavaScript Libraries -->
        <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
        <script src="/views/bootstrap-news-template/lib/easing/easing.min.js"></script>
        <script src="/views/bootstrap-news-template/lib/slick/slick.min.js"></script>

        <!-- Template Javascript -->
        <script src="/views/bootstrap-news-template/js/main.js"></script>
    </body>
</html>