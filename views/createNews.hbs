<div align='center'>
    <h1>Создание статьи</h1>
    {{#if error}}
        <font color='red'>{{error}}</font>
    {{/if}}
    <form method="POST" action="/news/newPost" enctype="multipart/form-data">
        <div class="col-sm-6">
            
            <input name="title" type="text" class="form-control" placeholder="Название статьи" maxlength="100" minlength="5" autocomplete="off">
            <textarea name="postText" class="form-control" id="exampleFormControlTextarea1" rows="15" placeholder="Введите статью"></textarea>

            <select class="form-select" name="selectCategoryId">
                {{#each categories}}
                    <option value="{{this.id}}">{{this.category}}</option>
                {{/each}}
            </select><br><br>
            
            <form class="form-horizontal">
                <div class="form-group" style="text-align: left !important;">
                    <label for="dtp_input1" class="control-label">&nbsp;&nbsp;&nbsp;&nbsp;Выберите дату и время публикации</label>
                    <div class="input-group date form_datetime col-md-5" data-date-format="dd MM yyyy - HH:ii p" data-link-field="dtp_input1">
                        <input class="form-control" size="16" type="text" value="" readonly style="background-color: #ffffff;">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                        <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
                    </div>
                </div>
            </form>

            <h2>Seo настройки</h2><br>

            <input name="h1" type="text" class="form-control" placeholder="Поле h1" maxlength="100" minlength="5" autocomplete="off">

            <div align="left">
                <select class="js-example-basic-multiple form-control" data-placeholder="Выберите тэги" name="selectTagId" multiple="multiple" >
                    {{#each tags}}
                        <option value="{{this.tag}}">{{this.tag}}</option>
                    {{/each}}
                </select>
            </div><br>
            <textarea name="meta_description" class="form-control" maxlength="255" minlength="140" rows="4" placeholder="meta description"></textarea>

            <div class="input-group mb-3">
                <input type="file" name="postUrl" class="form-control" id="inputGroupFile02">
                <label class="input-group-text" for="inputGroupFile02">Изображение статьи</label>
            </div><br>

            <br><input type="submit" class="btn btn-secondary" value="Отправить">
        </div>
    </form>

</div>